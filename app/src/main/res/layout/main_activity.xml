<?xml version="1.0" encoding="utf-8"?>
<!--Основной экран приложения плей лист-->
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/main_background_PLM"
        android:orientation="vertical"
        android:paddingLeft="@dimen/main_padding16dp_PLM"
        android:paddingRight="@dimen/main_padding16dp_PLM"
        android:paddingTop="@dimen/main_padding14dp_PLM"
        tools:context=".MainActivity"
    >

    <!--Заголовок-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:text="@string/app_name"
        android:textColor="@color/main_text_title_PLM"
        android:textSize="@dimen/main_text22sp_PLM"
        android:paddingTop="@dimen/main_text_padding2dp_PLM"
        android:paddingBottom="@dimen/main_text_padding2dp_PLM"
        android:layout_marginBottom="@dimen/main_margin40dp_PLM"
        />

    <!--Первая кнопка-->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_Find"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:textAllCaps="false"
        android:backgroundTint="@color/white"
        android:text="@string/app_find"
        android:textColor="@color/main_text_PLM"
        android:textSize="@dimen/main_text22sp_PLM"
        app:icon="@drawable/main_search"
        app:iconGravity="textStart"
        app:iconTint="@color/main_text_PLM"
        app:iconPadding="@dimen/main_padding10dp_PLM"
        app:cornerRadius="@dimen/main_radius16dp_PLM"
        android:layout_marginBottom="@dimen/main_margin16dp_PLM"
        />

    <!--Вторая кнопка-->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_Media"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:textAllCaps="false"
        android:backgroundTint="@color/white"
        android:text="@string/app_media"
        android:textColor="@color/main_text_PLM"
        android:textSize="@dimen/main_text22sp_PLM"
        app:icon="@drawable/main_laibrary"
        app:iconGravity="textStart"
        app:iconTint="@color/main_text_PLM"
        app:iconPadding="@dimen/main_padding10dp_PLM"
        app:cornerRadius="@dimen/main_radius16dp_PLM"
        android:layout_marginBottom="@dimen/main_margin16dp_PLM"
        />

    <!--Третья кнопка-->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_Settings"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:textAllCaps="false"
        android:backgroundTint="@color/white"
        android:text="@string/app_settings"
        android:textColor="@color/main_text_PLM"
        android:textSize="@dimen/main_text22sp_PLM"
        app:icon="@drawable/main_settings"
        app:iconGravity="textStart"
        app:iconTint="@color/main_text_PLM"
        app:iconPadding="@dimen/main_padding10dp_PLM"
        app:cornerRadius="@dimen/main_radius16dp_PLM"
        android:layout_marginBottom="@dimen/main_margin16dp_PLM"
        />
    </LinearLayout>